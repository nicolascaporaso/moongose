<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperación de Contraseña</title>
</head>

<body>
    <h1>Recuperación de Contraseña</h1>

    {{#if error}}
    <p class="error">{{error}}</p>
    {{/if}}

    <form id="forgotPasswordForm" method="POST">
        <label for="email">Correo Electrónico:</label>
        <input type="email" id="email" name="email" required>
        <button type="submit">Enviar Correo de Recuperación</button>
    </form>
</body>

</html>

<script>const forgotPasswordForm = document.getElementById('forgotPasswordForm');
    const submitButton = document.getElementById('submitButton');

    // Agrega un evento de clic al botón
    submitButton.addEventListener('click', () => {
        // Obtiene los datos del formulario
        const formData = new FormData(forgotPasswordForm);

        // Realiza la solicitud fetch
        fetch('/auth/recovery/forgot-password', {
            method: 'POST',
            body: formData, // Envía los datos del formulario en el cuerpo de la solicitud
        })
            .then(response => {
                if (response.ok) {
                    // Maneja la respuesta exitosa aquí, por ejemplo, muestra un mensaje de éxito
                    alert('Solicitud de restablecimiento de contraseña enviada con éxito.');
                } else {
                    // Maneja una respuesta de error aquí, por ejemplo, muestra un mensaje de error
                    alert('Error al enviar la solicitud de restablecimiento de contraseña.');
                }
            })
            .catch(error => {
                // Maneja errores de red u otros errores aquí
                console.error('Error en la solicitud fetch:', error);
            });
    });</script>